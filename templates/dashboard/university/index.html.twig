{% extends 'dashboard.html.twig' %}

{% block title %}Universités plus fréquentés{% endblock %}

{% block body %}
    <div class="alert alert-primary p-0 mt-1">
        <h3 class="text-center">Liste des universités les plus fréquentées</h3>
    </div>

    <div class="col-md-10 mx-auto">
        <div class="text-right">
            <button class="btn btn-primary mb-2" data-toggle="modal" data-target="#exampleModal">
                <i class="fas fa-edit"> Ajouter </i>
            </button>
        </div>
        <!-- Modal -->
        <div class="modal fade text-left" id="exampleModal" tabindex="-1" role="dialog" aria-labelledby="exampleModalLabel" aria-hidden="true">
            <div class="modal-dialog" role="document">
                <div class="modal-content">
                    <div class="modal-header">
                        <h5 class="modal-title" id="exampleModalLabel">Ajout d'une université</h5>
                        <button type="button" class="close" data-dismiss="modal" aria-label="Close">
                            <span aria-hidden="true">&times;</span>
                        </button>
                    </div>
                    <div class="modal-body">
                        {{ form_start(form) }}
                            {{ form_rest(form) }}
                            <button class="btn btn-primary">Eregistrer</button>
                        {{ form_end(form) }}
                    </div>
                    <div class="modal-footer">
                        <button type="button" class="btn btn-danger" data-dismiss="modal">Fermer</button>
                    </div>
                </div>
            </div>
        </div>

        <table class="table">
            <thead class="thead-primary">
                <tr>
                    <th scope="col">#</th>
                    <th scope="col">Nom</th>
                    <th scope="col">Actions</th>
                </tr>
            </thead>
            <tbody>
            {% for university in universities %}
                <tr>
                    <th scope="row">{{university.id}}</th>
                    <td>{{university.name}}</td>
                    <td>
                        <a href="{{path("university.edit", {id: university.id})}}" class="btn btn-primary">
                            <i class="fas fa-edit"></i>
                        </a>
                    </td>
                </tr>
            {% endfor %}
            </tbody>
        </table>
    </div>
{% endblock %}
