{% extends 'dashboard.html.twig' %}

{% block title %}Gestion de Catégories{% endblock %}

{% block body %}
    <div class="alert alert-primary p-0">
        <h3 class="text-center">Liste de toutes les catégories</h3>
    </div>

    <div class="col-md-10 mx-auto">
        <div class="text-right">
            <button class="btn btn-primary" data-toggle="modal" data-target="#exampleModal">
                <i class="fas fa-edit"> Nouvelle Catégorie</i>
            </button>
        </div>
        <!-- Modal -->
        <div class="modal fade text-left" id="exampleModal" tabindex="-1" role="dialog" aria-labelledby="exampleModalLabel" aria-hidden="true">
            <div class="modal-dialog" role="document">
                <div class="modal-content">
                    <div class="modal-header">
                        <h5 class="modal-title" id="exampleModalLabel">Ajout d'une catégorie</h5>
                        <button type="button" class="close" data-dismiss="modal" aria-label="Close">
                            <span aria-hidden="true">&times;</span>
                        </button>
                    </div>
                    <div class="modal-body">
                        {{ form_start(form) }}
                            {{ form_rest(form) }}
                            <button class="btn btn-primary">Sauvegarder</button>
                        {{ form_end(form) }}
                    </div>
                    <div class="modal-footer">
                        <button type="button" class="btn btn-danger" data-dismiss="modal">Fermer</button>
                    </div>
                </div>
            </div>
        </div>

        <table class="table">
            <thead class="thead-primary">
                <tr>
                    <th scope="col">#</th>
                    <th scope="col">Label</th>
                    <th scope="col">Actions</th>
                </tr>
            </thead>
            <tbody>
            {% for category in categories %}
                <tr>
                    <th scope="row">{{category.id}}</th>
                    <td>{{category.label}}</td>
                    <td>
                        <a href="{{path("category.edit")}}" class="btn btn-primary">Edit</a>
                    </td>
                </tr>
            {% endfor %}
            </tbody>
        </table>
    </div>
{% endblock %}
